<Window x:Class="TwitterNet.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Login" Height="175" Width="232" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label Height="28" Name="label1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="41">Login</Label>
        <TextBox Height="23" Name="txtLogin"/>
        <Label Name="label2" HorizontalAlignment="Left" Width="62">Password</Label>
        <PasswordBox Name="txtPassword" />
        <Button Margin="0,10,2,0" Name="btnLogin" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="btnLogin_Click">Login</Button>
    </StackPanel>
</Window>
